#!/bin/sh
# postinst script for foo
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    if ! [ -f /etc/corenode/config.py ] ; then
        echo "coreNode: Creating default configuration file"
        RANDOM_AUTH_TOKEN=`head -c 100 /dev/urandom | md5sum | cut -f 1 -d ' '`
        INSTALLATION_ID=`head -c 100 /dev/urandom | md5sum | cut -f 1 -d ' '`
        sed -e "s/RANDOM_AUTH_TOKEN/$RANDOM_AUTH_TOKEN/"\
            -e "s/RANDOM_INSTALLATION_ID/$INSTALLATION_ID/"\
            /etc/corenode/config.example > /etc/corenode/config.py
    fi

    echo "coreNode: Migrating logs database"
    /usr/sbin/cc-admin migrate --database=logs

    echo "coreNode: Updating qemu configuration"
    sed -e "s/#user = \"root\"/user = \"root\"/"\
        -e "s/#group = \"root\"/group = \"root\"/"\
        -e "s/#dynamic_ownership = 1/dynamic_ownership = 1/"\
            /etc/libvirt/qemu.conf > /tmp/qemu.conf
    mv /etc/libvirt/qemu.conf /etc/libvirt/qemu.conf.bak
    mv /tmp/qemu.conf /etc/libvirt/qemu.conf
    service libvirt-bin restart || service libvirtd restart


    echo "coreNode: Changing permissions"
    chown -R cloudover:cloudover /var/lib/cloudOver || true
    chown -R cloudover:cloudover /var/log/cloudOver || true
    chown -R cloudover:cloudover /etc/corenode || true
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
